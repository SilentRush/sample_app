<div class="center jumbotron">
  <h1><%= @tournament.tname %></h1>
    <h2><%= @tournament.tsuffix %></h2>

    <table class="table">
      <thead>
        <tr>
          <th>Round</th>
          <th>Winner</th>
          <th>loser</th>
          <th>Score</th>
          <th>Winner Characters</th>
          <th>Loser Character</th>
        </tr>
      </thead>
      <tbody>
      <% @tournament.rounds.each do |round| %>

        <% round.sets.each do |set| %>
        <tr>
          <td><%= round.roundName.humanize.split.map(&:capitalize).join(' ') %></td>
            <td><%= set.winner %></td>
            <td><%= set.loser %></td>
            <td><%= set.wscore %> - <%= set.lscore %></td>
            <td><%= set.matches.first.wchar.to_s %></td>
            <td><%= set.matches.first.lchar.to_s %></td>
        </tr>
        <% end %>

      <% end %>
    </tbody>
  </table>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("https://cdn2.iconfinder.com/data/icons/social-18/512/Youtube-128.png", alt: "SilentRush Youtube"),
            'https://www.youtube.com/channel/UCPX7XGzTNf-Rt_c_QLTuWEQ/videos' %>
